generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ----------------------------
// Models
// ----------------------------

// USERS
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  phone     String   @unique
  password  String
  address   String?
  role      String   @default("user")
  createdAt DateTime @default(now())

  cart   Cart?
  orders Order[]
}

// CATEGORIES
model Category {
  id        Int      @id @default(autoincrement())
  name      String
  storeId Int 
  imageUrl  String?
  createdAt DateTime @default(now())
  isAvailable Boolean @default(true)  // ← حقل جديد لتحديد التوفر

  
  store   Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  imageUrl    String?
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  storeId Int?
  store   Store? @relation(fields: [storeId], references: [id], onDelete: Cascade)

  cartItems  CartItem[]
  orderItems OrderItem[]
}

// STORES
model Store {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  imageUrl    String?
  address     String?
  phone       String?
  isActive    Boolean  @default(true)
  category    StoreCategory

  createdAt   DateTime @default(now())

  products   Product[]
  categories Category[] 
  orders     Order[]
}

// CART (سلة المستخدم)

model Cart {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  createdAt DateTime @default(now())

  user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items CartItem[]
}

// CART ITEMS
model CartItem {
  id       Int @id @default(autoincrement())
  quantity Int @default(1)

  cartId Int
  cart   Cart @relation(fields: [cartId], references: [id], onDelete: Cascade)

  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([cartId, productId])
}

// ORDERS 
model Order {
  id            Int         @id @default(autoincrement())
  totalPrice    Float
  phoneNumber   String // ← تأكد من وجوده هنا
  deliveryPrice Float
  finalPrice    Float
  paymentMethod String      @default("cash_on_delivery")
  status        OrderStatus @default(pending)
  createdAt     DateTime    @default(now())

  storeId Int
  store   Store @relation(fields: [storeId], references: [id], onDelete: Cascade)


  userId Int? // ← أصبح اختياري
  user   User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  items OrderItem[]
}

// ORDER ITEMS
model OrderItem {
  id       Int   @id @default(autoincrement())
  quantity Int
  price    Float

  orderId Int
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// ENUMS
enum OrderStatus {
  pending
  delivering
  completed
  canceled
  preparing // أضفه إذا كنت تريد استخدامه
}

enum StoreCategory {
  fast_food
  restaurant
  pharmacy
  supermarket
  baby_store
}

